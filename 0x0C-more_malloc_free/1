#include "main.h"
#include <stdlib.h>
#include <sysexits.h>

/**
  * malloc_checked - main entry for allocating malloc.
  * @b: int for casting malloc memory.
  *
  * Return: Always (0) for succes.
  */

void *malloc_checked(unsigned int b)
{
	int a;
	unsigned int *p = &b;
	int size = 0;

	for (a = 0; p[a] != '\0'; a++)
	{
		size++;
	}

	p = malloc(size * sizeof(void *));

	if (p == NULL)
	{
		exit(int 98);
	}
	
	p[size] = '\0';
	return (p);
}
