CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic -std=gnu89 -lm

all: $(NAME)

$(NAME): $(SRC:.c=.o)
	$(CC) -Wall -Wextra -Werror -pedantic -std=gnu89 $(SRC:.c=.o) -o $(NAME)

clean:
	$(RM = rm -f) *~ $(NAME)

oclean:
	$(RM = rm -f) $(SRC:.c=.o)

fclean: clean oclean

re: oclean all
