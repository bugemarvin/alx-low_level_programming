CC = gcc
SRC = $(wildcard ./*.c)
OBJ = main.o school.o
NAME = school

all: $(NAME)

school: $(OBJ)
	$(CC) -Wall -Wextra -Werror -pedantic -std=gnu89 -o $(NAME) $(OBJ) -lm

main.o: $(SRC) m.h
	$(CC) -Wall -Wextra -Werror -pedantic -std=gnu89 -c main.c

school.o: $(SRC) m.h
	$(CC) -Wall -Wextra -Werror -pedantic -std=gnu89 -c school.c

clean:
		rm -f $(OBJ) $(NAME)
